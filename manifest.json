{
  "manifest_version": 3,
  "name": "Word Memory Assistant",
  "version": "1.0",
  "description": "A Chrome extension to help memorize English words by highlighting and managing vocabulary lists",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Word Memory Assistant"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}